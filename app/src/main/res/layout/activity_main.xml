<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_light"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/lyPremium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tvPremium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amaranth_regular"
            android:background="@color/contrast_data"
            android:textColor="@color/app_color_light"
            android:textAlignment="center"
            android:paddingVertical="8dp"
            android:text="@string/premium"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/svGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="70dp"
        android:layout_below="@id/lyPremium">

        <LinearLayout
            android:id="@+id/lyContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amaranth_bold"
                android:textSize="26sp"
                android:textColor="@color/app_color_regular"
                android:textAlignment="center"
                android:layout_marginTop="22dp"
                android:text="@string/title"/>

            <TextView
                android:id="@+id/tvLevelTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/amaranth_bold"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:textColor="@color/app_color_light"
                android:textSize="18sp"
                android:background="@drawable/bg_title_top"
                android:text="@string/level"/>

            <TextView
                android:id="@+id/tvLevelNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:fontFamily="@font/amaranth_bold"
                android:paddingBottom="10dp"
                android:textAlignment="center"
                android:textColor="@color/app_color_light"
                android:textSize="18sp"
                android:background="@drawable/bg_title_bottom"
                android:text="1"/>

            <LinearLayout
                android:id="@+id/ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <LinearLayout
                    android:id="@+id/lyMoves"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvMovesTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/amaranth_bold"
                        android:paddingVertical="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/app_color_light"
                        android:textSize="18sp"
                        android:background="@drawable/bg_title_top"
                        android:backgroundTint="@color/app_color_regular"
                        android:text="@string/moves"/>

                    <TextView
                        android:id="@+id/tvMovesNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth_bold"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/app_color_light"
                        android:textSize="18sp"
                        android:background="@drawable/bg_title_bottom"
                        android:backgroundTint="@color/app_color_regular"
                        android:text="1"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTimeTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/amaranth_bold"
                        android:paddingVertical="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/app_color_light"
                        android:textSize="18sp"
                        android:background="@drawable/bg_title_top"
                        android:backgroundTint="@color/app_color_regular"
                        android:text="@string/time"/>

                    <TextView
                        android:id="@+id/tvTimeNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth_bold"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/app_color_light"
                        android:textSize="18sp"
                        android:background="@drawable/bg_title_bottom"
                        android:backgroundTint="@color/app_color_regular"
                        android:text="00:00"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyLives"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLivesTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/amaranth_bold"
                        android:paddingVertical="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/app_color_light"
                        android:textSize="18sp"
                        android:background="@drawable/bg_title_top"
                        android:backgroundTint="@color/contrast_data"
                        android:text="@string/lives"/>

                    <TextView
                        android:id="@+id/tvLivesNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/amaranth_bold"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/app_color_light"
                        android:textSize="18sp"
                        android:background="@drawable/bg_title_bottom"
                        android:backgroundTint="@color/contrast_data"
                        android:text="0"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvOptionsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/amaranth_bold"
                        android:paddingVertical="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/app_color_light"
                        android:textSize="18sp"
                        android:background="@drawable/bg_title_top"
                        android:backgroundTint="@color/app_color_regular"
                        android:translationY="2dp"
                        android:text="@string/options"/>

                    <View
                        android:id="@+id/bonusBar"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:translationY="-2dp"
                        android:layout_gravity="left"
                        android:background="@color/contrast_data"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:translationY="-2dp"
                        android:background="@drawable/bg_title_bottom"
                        android:backgroundTint="@color/app_color_regular"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvOptionsData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/amaranth_bold"
                            android:paddingBottom="10dp"
                            android:textAlignment="center"
                            android:textColor="@color/app_color_light"
                            android:textSize="18sp"
                            android:backgroundTint="@color/app_color_regular"
                            android:text="0"/>

                        <TextView
                            android:id="@+id/tvBonusData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/amaranth_bold"
                            android:paddingBottom="10dp"
                            android:textAlignment="center"
                            android:textColor="@color/app_color_light"
                            android:textSize="18sp"
                            android:backgroundTint="@color/app_color_regular"
                            android:text=""/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/tlBoard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp"/>

                <LinearLayout
                    android:id="@+id/lyMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:background="@color/message_bg"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tvIntroLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/amaranth_regular"
                        android:shadowColor="@color/white"
                        android:shadowRadius="8"
                        android:textColor="@color/app_color_dark"
                        android:textSize="70sp"
                        android:text="Level: 1"/>

                    <TextView
                        android:id="@+id/tvIntroLives"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="40dp"
                        android:fontFamily="@font/amaranth_regular"
                        android:shadowColor="@color/white"
                        android:shadowRadius="8"
                        android:textColor="@color/app_color_dark"
                        android:textSize="45sp"
                        android:text="Lives: 1"/>

                    <TextView
                        android:id="@+id/tvAction"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/bg_title_top"
                        android:fontFamily="@font/amaranth_regular"
                        android:paddingTop="10dp"
                        android:textAlignment="center"
                        android:textColor="@color/app_color_light"
                        android:textSize="24sp"
                        android:text="Next Level"
                        android:onClick="restartGame"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginBottom="40dp"
                        android:background="@drawable/bg_title_bottom"
                        android:onClick="launchShareGame"
                        android:color="@color/white"
                        app:tint="@color/white"
                        android:padding="6dp"
                        android:src="@drawable/ic_share"/>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/amaranth_bold"
                android:textAlignment="center"
                android:textColor="@color/app_color_regular"
                android:textSize="14sp"
                android:text="@string/instructions"/>

            <TextView
                android:id="@+id/tvCredits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/amaranth_bold"
                android:textAlignment="center"
                android:textColor="@color/app_color_regular"
                android:textSize="12sp"
                android:text="@string/credits"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/lyAdsBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

    </LinearLayout>
</RelativeLayout>